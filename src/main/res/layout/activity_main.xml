            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--ads:adSize="BANNER"-->
            <!--ads:adUnitId="@string/adUnitId">-->
        <!--</com.google.android.gms.ads.AdView>-->

    </LinearLayout>

